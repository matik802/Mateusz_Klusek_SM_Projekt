<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:stretchMode="columnWidth"
        app:columnCount="3"
        app:rowCount="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_column="0"
            app:layout_columnWeight="2"
            app:layout_row="0">

            <TextView
                android:id="@+id/_book_ISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/book_ISBN_date_label"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/book_ISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/borrow_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_column="1"
            app:layout_columnWeight="3"
            app:layout_row="0">

            <TextView
                android:id="@+id/_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/user_email_label"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_column="2"
            app:layout_columnWeight="1.2"
            app:layout_row="0">

            <TextView
                android:id="@+id/_borrow_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/borrow_status_label"
                android:textColor="@color/purple_500" />

            <TextView
                android:id="@+id/borrow_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>
</FrameLayout>